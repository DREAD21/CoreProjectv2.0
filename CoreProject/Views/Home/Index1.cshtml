@model MainFormData
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Поиск с помощью Bootstrap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Подключение стилей Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>
<body>
    <!-- Обертка для элементов, которые нужно центрировать -->
    <div class="d-flex justify-content-center align-items-center" style="height: 75vh;">
        <!-- Форма поиска с dropdown меню -->
        <form class="form-inline" asp-action="Index4" method="get">
            <div class="form-group w-200 mx-auto">
                <input asp-for="text" type="text" class="form-control" id="search-input" placeholder="Поиск">
            </div>
            <!-- Кнопка dropdown -->
            <div class="form-group">
                <select class="form-control" id="dropdown" name="dropdown">
                    <option value="Фамилия студента">Фамилия студента</option>
                    <option value="Фамилия преподавателя">Фамилия руководителя</option>
                    <option value="Заголовок">Название работы</option>
                </select>
            </div>
            <input type="submit" class="btn btn-primary" value="Найти" />
        </form>
    </div>
    <!-- Подключение скриптов Bootstrap и jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.dropdown-item').click(function () {
                var value = $(this).data('value');
                $.ajax({
                    type: 'POST',
                    url: '/Controller/Privacy',
                    data: { value: value },
                    success: function (result) {
                        // Обработка успешного ответа от сервера
                    },
                    error: function () {
                        // Обработка ошибки
                    }
                });
            });
        });
    </script>
</body>
</html>